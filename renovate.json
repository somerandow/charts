{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": { "enabled": true },
  "bumpVersion": "patch",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update sonarr Chart.yaml versions",
      "fileMatch": ["^charts\\/sonarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/sonarr"
    }
  ],
  "packageRules": [
    {
      "description": "Bump helm chart versions when Chart.yaml is changed",
      "matchManagers": ["helm-values","helmv3"],
      "postUpgradeTasks": {
        "commands": [
          "bash scripts/bump-chart-version.sh '{{{packageFileDir}}}' '{{{isMajor}}}' '{{{isMinor}}}' '{{{isPatch}}}'"
        ],
        "fileFilters": ["**/Chart.yaml"],
        "executionMode": "branch"
      }
    }
  ]
}
