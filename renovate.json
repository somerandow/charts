{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": { "enabled": true },
  "bumpVersion": "patch",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update bazarr Chart.yaml version",
      "fileMatch": ["^charts\\/bazarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/bazarr"
    },
    {
      "customType": "regex",
      "description": "Update sonarr Chart.yaml version",
      "fileMatch": ["^charts\\/sonarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/sonarr"
    },
    {
      "customType": "regex",
      "description": "Update radarr Chart.yaml version",
      "fileMatch": ["^charts\\/radarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/radarr"
    },
    {
      "customType": "regex",
      "description": "Update lidarr Chart.yaml version",
      "fileMatch": ["^charts\\/lidarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/lidarr"
    },
    {
      "customType": "regex",
      "description": "Update qbittorrent Chart.yaml version",
      "fileMatch": ["^charts\\/qbittorrent\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/qbittorrent"
    },
    {
      "customType": "regex",
      "description": "Update ombi Chart.yaml version",
      "fileMatch": ["^charts\\/ombi\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/flaresolverr/flaresolverr"
    },
    {
      "customType": "regex",
      "description": "Update bookstack Chart.yaml version",
      "fileMatch": ["^charts\\/bookstack\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/solidnerd/bookstack"
    },
    {
      "customType": "regex",
      "description": "Update ombi Chart.yaml version",
      "fileMatch": ["^charts\\/ombi\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/linuxserver/ombi"
    },
    {
      "customType": "regex",
      "description": "Update plex Chart.yaml version",
      "fileMatch": ["^charts\\/plex\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/plex",
      "versioningTemplate": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(\\.(?<build>\\d+))?(-(?<revision>.*))?$"
    },
    {
      "customType": "regex",
      "description": "Update prowlarr Chart.yaml version",
      "fileMatch": ["^charts\\/prowlarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/prowlarr"
    },
    {
      "customType": "regex",
      "description": "Update readarr Chart.yaml version",
      "fileMatch": ["^charts\\/readarr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/readarr-develop"
    },
    {
      "customType": "regex",
      "description": "Update tautulli Chart.yaml version",
      "fileMatch": ["^charts\\/tautulli\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/onedr0p/tautulli"
    },
    {
      "customType": "regex",
      "description": "Update unpackerr Chart.yaml version",
      "fileMatch": ["^charts\\/unpackerr\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/golift/unpackerr"
    },
    {
      "customType": "regex",
      "description": "Update vaultwarden Chart.yaml version",
      "fileMatch": ["^charts\\/vaultwarden\\/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s+"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "docker.io/vaultwarden/server"
    }
  ],
  "packageRules": [
    {
      "description": "Bump helm chart versions when Chart.yaml is changed",
      "matchFileNames": ["**/Chart.yaml"],
      "postUpgradeTasks": {
      "commands": [
          "bash scripts/bump-chart-version.sh '{{{packageFileDir}}}' '{{{isMajor}}}' '{{{isPatch}}}'"
        ],
        "executionMode": "branch"
      }
    },
    {
      "description": "Auto-merge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "description": "Handle plex image versioning",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/onedr0p/plex"],
      "versioning": "regex:^(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?(\\.(?<build>\\d+))?(-(?<revision>.*))?$"
    }
  ]
}
